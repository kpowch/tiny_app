<!-- lists all URLS - short and long form -->

<!DOCTYPE html>
<html lang='en'>

<head>
  <title>TinyApp Index</title>
</head>

<body>
  <header>
    <% include partials/_header %>
  </header>

  <div style='font-family:sans-serif; text-align:center'>
    <p>
      <a href='/urls/new'>Create a New Short Link!</a>
    </p>

    <h3>Your URLs:</h3>

    <table style='margin:auto'>
      <tr>
        <th>
          ShortURLs
        </th>

        <th>
          Original LongURLs
        </th>
      </tr>

      <% for (let prop in urls) { %>
        <tr style='height:40px'>
          <td>
            <a href=u/<%=prop%>><%= prop %></a>
          </td>

          <td style='min-width:240px'>
            <a href=<%= urls[prop].longURL %>><%= urls[prop].longURL %></a>
          </td>

          <td style='width:40px'>
            <form action='/urls/<%=prop%>' method='GET' style='display:inline-block' >
            <input type='submit' value='Edit' style="font-family: sans-serif; font-size: 18px;">
            </form>
          </td>

          <td style='width:40px'>
            <form action='/urls/<%=prop%>/delete' method='POST' style='display:inline-block' >
            <input type='submit' value='Delete' style="font-family: sans-serif; font-size: 18px;">
            </form>
          </td>
        </tr>
      <% } %>
    </table>
  </div>

  <footer>
    <% include partials/_footer %>
  </footer>
</body>

</html>
