<!--
if user not logged in only: show form with email and password input fields and
submit button (POST /login)
-->

<!DOCTYPE html>
<html lang='en'>
<head>
  <title>Login></title>
  <meta charset='utf-8'>
</head>

<body>
  <header>
    <% include partials/_header %>
  </header>

  <div style='width:260px; margin:auto'>
    <div style='font-family:sans-serif; text-align:right'>
      <p>
        Please enter your creditials to login:
      </p>

      <form action='/login' method='POST'>
        <div>
          Email: <input type='email' name='email' style='height:16px'>
        </div>
        <div>
          Password: <input type='password' name='password' style='height:16px'>
        </div>
        <input type='submit' value='Submit' style="font-family: sans-serif; font-size: 18px;">
      </form>
    </div>
  </div>

  <footer>
    <% include partials/_footer %>
  </footer>
</body>
</html>
