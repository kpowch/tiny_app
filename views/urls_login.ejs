<!-- shows the short and long form of a specific URL -->

<!DOCTYPE html>
<html lang='en'>
<head>
  <title>Login></title>
</head>

<body>
  <header>
    <% include partials/_header %>
  </header>

  <div style='width:260px; margin:auto'>
    <div style='font-family:sans-serif; text-align:right'>
      <% if(!user) { %>
        <p>
          Please enter your creditials to login:
        </p>

        <form action='/login' method='POST'>
          <div>
            Email: <input type='email' name='email' style='height:16px'>
          </div>
          <div>
            Password: <input type='password' name='password' style='height:16px'>
          </div>
          <input type='submit' value='Submit' style="font-family: sans-serif; font-size: 18px;">
        </form>
      <% } else { %>
        THIS SHOULD NOT BE SHOWING
      <% } %>
    </div>
  </div>

  <footer>
    <% include partials/_footer %>
  </footer>
</body>
</html>
