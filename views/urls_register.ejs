<!-- user registration page -->

<!DOCTYPE html>
<html lang='en'>
  <head>
    <title>Registration</title>
  </head>

  <body>
    <header>
      <% include partials/_header %>
    </header>

    <div style='font-family:sans-serif; text-align:right'>
      <p style='text-align:center'>
        Please enter your creditials to register:
      </p>

      <form action='/register' method='POST'>
        <div style='width:220px; margin:auto'>
          <div>
            Name: <input type='text' name='name' style='height:16px'>
          </div>
          <div>
            Email: <input type='email' name='email' style='height:16px'>
          </div>
          <div>
            Password: <input type='password' name='password' style='height:16px'>
          </div>
          <input type='submit' value='Register' style="font-family: sans-serif; font-size: 18px;">
        </div>
      </form>
    </div>

    <footer>
      <% include partials/_footer %>
    </footer>
  </body>
</html>
